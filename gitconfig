[alias]
  co = checkout
  st = status
  ci = commit
  br = branch
  pom = push origin master
  w = whatchanged
  lgd = log --graph --decorate
  undo = reset --soft HEAD^
  lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
  clean-branches = !git branch --merged | grep -v \"\\*\" | grep -v master | grep -v develop | xargs -n 1 git branch -d
  last = log -1 HEAD
[color]
  diff = auto
  status = auto
  branch = auto
  ui = auto
[core]
  excludesfile = /Users/kp/.gitignore
  #editor = emacsclient
  editor = vim
  autocrlf = input
[apply]
  whitespace = fix
[format]
  pretty = %C(yellow)%h%Creset%C(green)%d%Creset %s %C(red)[%an]%Creset %C(cyan)[%cr]%Creset
[rerere]
  enabled = 1
[push]
  default = tracking
[branch]
  autosetuprebase = always
#[mergetool "ediff"]
  #cmd = /Applications/Emacs.app/Contents/MacOS/bin/emacsclient --eval \"(git-mergetool-emacsclient-ediff \\\"$LOCAL\\\" \\\"$REMOTE\\\" \\\"$BASE\\\" \\\"$MERGED\\\")\"
  #trustExitCode = true
#[mergetool]
  #prompt = false
[merge]
  #tool = ediff
  tool = vimdiff
[diff]
  tool = vimdiff
[filter "lfs"]
	clean = git-lfs clean %f
	smudge = git-lfs smudge %f
	required = true
